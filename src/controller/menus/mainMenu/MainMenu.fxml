<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="252.0" styleClass="vbox" xmlns="http://javafx.com/javafx/9.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.menus.mainMenu.MainMenuController">
    <children>
        <AnchorPane prefHeight="200.0" prefWidth="200.0"/>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <children>
                <Button fx:id="newGameButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false"
                        onAction="#onNewGame" text="%mainMenu.newGame" textAlignment="CENTER"/>
                <Button fx:id="continueGameButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#onContinue" text="%mainMenu.continueGame" textAlignment="CENTER"/>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSettings"
                        text="%settings"/>
                <Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#onQuit" text="%mainMenu.quit"/>
            </children>
        </VBox>
    </children>
</VBox>
